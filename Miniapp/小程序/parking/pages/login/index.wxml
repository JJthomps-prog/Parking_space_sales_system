<view class="container"> 
 
 <view class="login-icon"> 
 <image class="login-img" src="https://img0.baidu.com/it/u=310872500,29209632&fm=26&fmt=auto"></image> 
 </view> 
 <view class="login-from"> 
 
 <!--账号-->
 <view class="inputView"> 
  <image class="nameImage" src="https://img-blog.csdnimg.cn/20190505172908345.png"></image> 
  <label class="loginLab">邮箱</label> 
  <input class="inputText" placeholder="请输入邮箱" bindinput="usernameInput" /> 
 </view>   
 <view class="line"></view>  
  
 <!--密码-->
 <view class="inputView"> 
  <image class="keyImage" src="https://img-blog.csdnimg.cn/20190505172853378.png"></image> 
  <label class="loginLab">密码</label> 
  <input class="inputText" password="true" placeholder="请输入密码" bindinput="passwordInput" /> 
 </view> 
 
 <!--按钮-->
 <view class="loginBtnView"> 
  <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login">登录</button> 
 </view> 
 </view> 
</view>